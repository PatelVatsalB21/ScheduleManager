<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="50dp"
    android:layout_margin="20dp">

    <TextView

        android:id="@+id/Quick_Note_Spinner_Item_Row_Layout_Heading"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_toStartOf="@id/Quick_Note_Spinner_Item_Row_Layout_Img_View"
        android:layout_toLeftOf="@id/Quick_Note_Spinner_Item_Row_Layout_Img_View"
        android:layout_centerVertical="true"
        android:text="Color Name"
        android:textSize="22sp" />

    <ImageView
        android:id="@+id/Quick_Note_Spinner_Item_Row_Layout_Img_View"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_margin="10dp"/>

</RelativeLayout>