    <RelativeLayout
        android:id="@+id/Open_email_main_time_lin_layout"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="invisible"
        android:background="@color/colorPrimary">


        <TimePicker
            android:id="@+id/Open_email_task_timepicker"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="@font/poppins_medium" />

        <Button
            android:id="@+id/Open_email_task_timepicker_cancel_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/Open_email_task_timepicker"
            android:layout_alignParentLeft="true"
            android:padding="10dp"
            android:text="@string/close_ScheduleEmail"
            android:textColor="@color/colorPrimaryDark"
            android:fontFamily="@font/poppins_semibold"/>

        <Button
            android:id="@+id/Open_email_task_timepicker_save_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/Open_email_task_timepicker"
            android:layout_alignParentRight="true"
            android:padding="10dp"
            android:text="Save"
            android:textColor="@color/colorPrimaryDark"
            android:fontFamily="@font/poppins_semibold"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/Open_email_main_date_lin_layout"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@color/colorPrimary"
        android:visibility="invisible"
        android:orientation="vertical">

        <DatePicker
            android:id="@+id/Open_email_task_datepicker"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="@font/poppins_medium" />

        <Button
            android:id="@+id/Open_email_task_datepicker_cancel_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/Open_email_task_datepicker"
            android:layout_alignParentLeft="true"
            android:padding="10dp"
            android:text="@string/close_ScheduleEmail"
            android:textColor="@color/colorPrimaryDark"
            android:layout_alignParentStart="true"
            android:fontFamily="@font/poppins_semibold" />

        <Button
            android:id="@+id/Open_email_task_datepicker_save_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/Open_email_task_datepicker"
            android:layout_alignParentRight="true"
            android:padding="10dp"
            android:text="Save"
            android:textColor="@color/colorPrimaryDark"
            android:layout_alignParentEnd="true"
            android:fontFamily="@font/poppins_semibold" />

    </RelativeLayout>
    <Button
        android:id="@+id/Open_email_task_discard_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="15dp"
        android:padding="10dp"
        android:text="@string/cancel_ScheduleEmail"
        android:textColor="@color/colorPrimaryDark"
        android:fontFamily="@font/poppins_semibold"
        android:background="@android:color/transparent"
        android:layout_below="@id/Open_email_main_rel_layout"
        android:layout_marginStart="15dp" />

    <Button
        android:id="@+id/Open_email_task_send_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="15dp"
        android:padding="10dp"
        android:text="@string/save_and_schedule_ScheduleEmail"
        android:textColor="@color/colorPrimaryDark"
        android:fontFamily="@font/poppins_semibold"
        android:background="@android:color/transparent"
        android:layout_marginEnd="15dp"
        android:layout_below="@id/Open_email_main_rel_layout" />

</RelativeLayout>
