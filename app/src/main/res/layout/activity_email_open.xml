            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="@string/subject_ScheduleEmail"
                android:textColor="@color/colorInversePrimary"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:fontFamily="@font/poppins_medium" />

            <EditText
                android:id="@+id/Open_email_task_subject"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:textSize="18sp"
                android:textColor="@color/colorInversePrimary"
                android:hint="@string/subjectEditTxt_ScheduleEmail"
                android:inputType="textEmailSubject"
                android:fontFamily="@font/poppins_semibold"
                android:background="@android:color/transparent" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="@string/message_ScheduleEmail"
                android:textColor="@color/colorInversePrimary"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:fontFamily="@font/poppins_medium" />

            <EditText
                android:id="@+id/Open_email_task_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:textSize="18sp"
                android:textColor="@color/colorInversePrimary"
                android:gravity="start|top"
                android:hint="@string/message_ScheduleEmail"
                android:isScrollContainer="true"
                android:scrollbars="vertical"
                android:fontFamily="@font/poppins_semibold"
                android:background="@android:color/transparent" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="@string/date_ScheduleEmail"
                android:textColor="@color/colorInversePrimary"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:fontFamily="@font/poppins_medium"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">

                <TextView
                    android:id="@+id/Open_email_task_date_indicator"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@id/Open_email_task_calendar_btn"
                    android:layout_toLeftOf="@id/Open_email_task_calendar_btn"
                    android:gravity="start|top"
                    android:hint="@string/dateEditTxt_ScheduleEmail"
                    android:textColor="@color/colorInversePrimary"
                    android:textSize="18sp"
                    android:fontFamily="@font/poppins_medium" />

                <Button
                    android:id="@+id/Open_email_task_calendar_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="5dp"
                    android:background="@android:color/transparent"
                    android:text="@string/show_calendar_btn_ScheduleEmail"
                    android:textColor="@color/colorPrimaryDark"
                    android:fontFamily="@font/poppins_semibold" />

            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="@string/time_ScheduleEmail"
                android:textColor="@color/colorInversePrimary"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:fontFamily="@font/poppins_medium" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/Open_email_task_time_indicator"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@id/Open_email_task_timePicker_btn"
                    android:layout_toLeftOf="@id/Open_email_task_timePicker_btn"
                    android:gravity="start|top"
                    android:hint="@string/timeEditTxt_ScheduleEmail"
                    android:textColor="@color/colorInversePrimary"
                    android:textSize="18sp"
                    android:fontFamily="@font/poppins_medium" />

                <Button
                    android:id="@+id/Open_email_task_timePicker_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="5dp"
                    android:background="@android:color/transparent"
                    android:text="@string/set_time_btn_ScheduleEmail"
                    android:textColor="@color/colorPrimaryDark"
                    android:fontFamily="@font/poppins_semibold" />

            </RelativeLayout>

        </LinearLayout>
