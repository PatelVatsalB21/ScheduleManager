<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    app:cardCornerRadius="30dp"
    app:cardElevation="10dp"
    android:padding="15dp"
    android:layout_margin="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/showcase_view_outline"
        android:padding="10dp">

    <TextView
        android:id="@+id/Profile_Dialog_head_txt_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Enter Your Message"
        android:textColor="@color/color_yellow"
        android:textSize="20sp" />



            <EditText
                android:id="@+id/Profile_Dialog_Edit_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:textSize="20sp"
                android:maxLength="30"
                android:textColor="@color/colorInversePrimary"
                android:background="@android:color/transparent"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:weightSum="2">

                <Button
                    android:id="@+id/Profile_Dialog_btn_cancel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:text="Cancel"
                    android:gravity="start|center_vertical"
                    android:textColor="@color/Yellow_new_Dark_txt"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/Profile_Dialog_btn_save"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:text="Save "
                    android:gravity="end|center_vertical"
                    android:textColor="@color/color_yellow"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>
</com.google.android.material.card.MaterialCardView>